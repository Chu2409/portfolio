---
interface Props {
  icon: string;
  title: string;
}

const { icon, title } = Astro.props;
---

<div
  class="cursor-default flex items-center overflow-hidden rounded-2xl bg-white/5 py-4 px-3 shadow-surface-elevation-low transition duration-300 hover:bg-white/10 hover:shadow-surface-elevation-medium"
>
  <img src={icon} alt={title} class="w-7" />
  <p class="ml-2 text-lg text-gray-200/90">{title}</p>
</div>
