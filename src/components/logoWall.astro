---
interface Technology {
  fileName: string;
  displayName: string;
}
const technologies: Technology[] = [
  { fileName: "angular", displayName: "Angular" },
  { fileName: "astro", displayName: "Astro" },
  { fileName: "bash", displayName: "Bash" },
  { fileName: "cpanel", displayName: "cPanel" },
  { fileName: "csharp", displayName: "C#" },
  { fileName: "CSS3", displayName: "CSS3" },
  { fileName: "docker", displayName: "Docker" },
  { fileName: "dotnet", displayName: ".NET" },
  { fileName: "expo", displayName: "Expo" },
  { fileName: "git", displayName: "Git" },
  { fileName: "HTML5", displayName: "HTML5" },
  { fileName: "javaScript", displayName: "JavaScript" },
  { fileName: "java", displayName: "Java" },
  { fileName: "mysql", displayName: "MySQL" },
  { fileName: "nestjs", displayName: "NestJS" },
  { fileName: "next", displayName: "Next.js" },
  { fileName: "nodejs", displayName: "Node.js" },
  { fileName: "postgresql", displayName: "PostgreSQL" },
  { fileName: "prisma", displayName: "Prisma" },
  { fileName: "react", displayName: "React" },
  { fileName: "spring", displayName: "Spring" },
  { fileName: "tailwindcss", displayName: "Tailwind CSS" },
  { fileName: "typeScript", displayName: "TypeScript" },
  { fileName: "ubuntu", displayName: "Ubuntu" },
  { fileName: "wordpress", displayName: "WordPress" },
];
---

<div class="relative overflow-x-hidden py-8">
  <div
    class="pointer-events-none absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-[var(--background)] to-transparent z-20"
  >
  </div>
  <div
    class="pointer-events-none absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-[var(--background)] to-transparent z-20"
  >
  </div>

  <div class="flex animate-scroll hover:animate-paused gap-12 md:gap-20 w-max">
    {
      [...technologies, ...technologies, ...technologies].map((tech) => (
        <div class="flex items-center gap-2 group transition-all duration-300">
          <img
            src={`/svg/${tech.fileName}.svg`}
            alt={tech.displayName}
            class="h-7 w-auto object-contain transition-transform group-hover:scale-110 opacity-60"
            width="30"
            height="30"
            loading="lazy"
          />
          <span class="text-lg font-medium text-[var(--white-icon)]">
            {tech.displayName}
          </span>
        </div>
      ))
    }
  </div>
</div>

<style is:global>
  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
  .animate-scroll {
    animation: scroll 60s linear infinite;
  }

  @media (min-width: 768px) {
    .animate-scroll {
      animation-duration: 50s;
    }
  }
</style>
